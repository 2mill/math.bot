	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Launch Bot in watch mode",
			"runtimeExecutable": "npm",
			"cwd": "${workspaceFolder}",
			"runtimeArgs": ["run-script", "watch"],
			"autoAttachChildProcesses": true,
			"port": 9229
		},
		{
			"type": "node",
			"request": "attach",
			"name": "Attach to Bot process",
			"port": 9229
		}
	]
}
